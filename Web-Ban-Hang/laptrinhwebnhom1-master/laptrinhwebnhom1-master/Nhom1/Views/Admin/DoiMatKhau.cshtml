@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="/admin/doimatkhau" method="post" class="w-50 mx-auto">
    <h2 class="text-center">Đổi mật khẩu</h2>
    @if (@ViewBag.Error != null)
    {
        <div class="alert-danger alert">@ViewBag.Error</div>
    }
    <div class="form-group">
        <label for="inpMatKhau">Mật khẩu</label>
        <input class="form-control" id="inpMatKhau" name="MatKhau" type="password" placeholder="Nhập mật khẩu" />
    </div>
    <div class="form-group">
        <label for="inpMatKhauMoi">Mật khẩu mới</label>
        <input class="form-control" id="inpMatKhauMoi" name="MatKhauMoi" type="password" placeholder="Nhập mật khẩu mới" />
    </div>
    <div class="form-group">
        <label for="inpMatKhau">Mật khẩu</label>
        <input class="form-control" id="inpNhapLaiMatKhau" name="NhapLaiMatKhauMoi" type="password" placeholder="Nhập lại mật khẩu mới" />
    </div>
    <button type="submit" class=" btn btn-block btn-warning">Đổi mật khẩu</button>
</form>
